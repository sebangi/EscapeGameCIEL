{% extends 'base.html.twig' %}

{% block title %}Modification de mécanisme{% endblock %}

{% block body %}
    {{ include('admin/mecanisme/_nav_mecanisme.html.twig') }}

    <div class="container mt-4">
        <div class="row">
            <div class="col-1"></div>

            <div class="col-10">
                <div class="card">
                    <div class="card-header text-bg-primary">Édition du mécanisme</div>
                    <div class="card-body">
                        {{ form_start(form) }} 

                        {{ include('admin/mecanisme/_form.html.twig', {'button_label': 'Sauvegarder'}) }}

                        <div class="row justify-content-start custom-line m-2"> 
                            <div class="col-4"></div> 
                            <div class="col-6">
                                <button class="btn btn-success">Sauvegarder</button>
                                <a href="{{ path('app_mecanisme_show', {'id': mecanisme.id}) }}" class="btn btn-secondary">
                                    Annuler
                                </a>
                            </div>   
                        </div>     
                        {{ form_end(form) }} 
                    </div>        
                </div>  
            </div>

            <div class="col-1"></div>                
        </div>
    </div>
{% endblock %}
