{% extends 'base.html.twig' %}

{% block title %}Modification d'une variable de controle{% endblock %}

{% block body %}
    <h1>Modification <span class="vdc">{{variable_de_controle.nom}}</h1>

    <div class="m-4">
        {{ form_start(form) }} 
        {{ include('variable_de_controle/_form.html.twig', {'button_label': 'Sauvegarder'}) }}


        <div class="row justify-content-start custom-line m-2"> 
            <div class="col-2"></div> 
            <div class="col-8">
                <button class="btn btn-success">Sauvegarder</button>
                <a href="{{ path('app_mecanisme_show', {'id': variable_de_controle.mecanisme.id}) }}" class="btn btn-danger">
                    Annuler
                </a>
            </div>   
        </div>     
        {{ form_end(form) }} 

    </div>
{% endblock %}
