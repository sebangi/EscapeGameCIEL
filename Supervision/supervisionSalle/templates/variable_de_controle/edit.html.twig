{% extends 'base.html.twig' %}

{% block title %}Modification d'une variable de controle{% endblock %}

{% block body %}    
    {{ include('mecanisme/_nav_mecanisme.html.twig') }}
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-1"></div>

            <div class="col-10">
                {{ form_start(form) }} 
                <div class="card">
                    <div class="card-header text-bg-primary">Édition de la variable de contrôle {{ variable_de_controle.nom }}</div>
                    <div class="card-body">
                        {{ form_start(form) }} 
                        {{ include('variable_de_controle/_form.html.twig', {'button_label': 'Sauvegarder'}) }}

                        <div class="row justify-content-start custom-line m-2"> 
                            <div class="col-4"></div> 
                            <div class="col-8">
                                <button class="btn btn-success">Sauvegarder</button>
                                <a href="{{ path('app_mecanisme_show', {'id': variable_de_controle.mecanisme.id}) }}" class="btn  btn-secondary">
                                    Annuler
                                </a>
                            </div>   
                        </div>     
                        {{ form_end(form) }}  
                    </div> 
                </div>     
                {{ form_end(form) }}
            </div>

            <div class="col-1"></div>                
        </div>
    </div>
{% endblock %}
