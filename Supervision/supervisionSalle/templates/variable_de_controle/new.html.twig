{% extends 'base.html.twig' %}

{% block title %}Nouvelle variable de contrôle{% endblock %}

{% block body %}
    <h1>Création d'une nouvelle variable de contrôle</h1>

    {{ form_start(form) }} 
    {{ include('variable_de_controle/_form.html.twig') }}
    
    <div>
        <div class="row justify-content-start custom-line m-2"> 
            <div class="col-2"></div> 
            <div class="col-8">
                <button class="btn btn-success">Ajouter</button>
                <a href="{{ path('app_mecanisme_show', {'id': variable_de_controle.mecanisme.id}) }}" class="btn btn-danger">
                    Annuler
                </a>
            </div>   
        </div>    
    </div>     
    {{ form_end(form) }}
    
{% endblock %}
